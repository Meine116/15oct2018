int z1=250;
int z2=250;
int x1=500;
int x2=500;
int x3=500;
int x4=500;
int c1=0;
int c2=0;

void setup(){
	size(500,500);
}

void draw(){
  background(255);
	line(250,c1,250,250);
	line(x2,x3,z1,z2);
	line (c2,x1,250,250);
  
c1++;
x1--;
	c2++;

	x3--;
	x2--;
	
}
